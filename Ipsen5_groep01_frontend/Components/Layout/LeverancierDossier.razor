@page "/leverancierDossierScherm"
@layout MainLayout
@using Models

<div class="decorative-bar" style="width:100%; height: 70px; background: linear-gradient(0.25turn, #FF6700 0%, #1A222D 53%, #183749 70%, #10ADE5 100%); margin-bottom: 30px;"></div>

<div class="main" style="width: 100%; height: fit-content; display: flex; justify-content: center; flex-direction: column; align-items: center;">
    <div class="filter-and-button" style="display: flex; flex-direction: row; width: 80%; justify-content: space-between; align-items: center;">
        <input type="text" style="width: 379px; border-radius: 8px; padding-left: 40px; background-image: url('data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\' viewBox=\'0 0 24 24\' fill=\'%231A222D\' width=\'18px\' height=\'18px\'><path d=\'M0 0h24v24H0V0z\' fill=\'none\'/><path d=\'M15.5 14h-.79l-.28-.27a6.5 6.5 0 0 0 1.48-5.34c-.47-2.78-2.79-5-5.59-5.34a6.505 6.505 0 0 0-7.27 7.27c.34 2.8 2.56 5.12 5.34 5.59a6.5 6.5 0 0 0 5.34-1.48l.27.28v.79l4.25 4.25c.41.41 1.08.41 1.49 0 .41-.41.41-1.08 0-1.49L15.5 14zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z\'/></svg>'); background-repeat: no-repeat; background-position: 8px center;" placeholder="Zoeken" />
        <p style="color: #1A222D; font-weight: bold; text-decoration: none; font-size: 22px; font-family: 'Ubuntu', sans-serif; letter-spacing: 0.16px; margin: 0; flex: 1; text-align: center;">Selecteer een opdracht</p>
        <div class="button-holder" style="width: 379px; display: flex; justify-content:end;">
            <div style="width: 225px; padding: 10px; background-color: #10ADE5; color: #F5F5F5; font-weight: bold; text-decoration: none; font-size: 22px; font-family: 'Ubuntu', sans-serif; letter-spacing: 0.16px; display: flex; justify-content: center; align-items: center; height: 50px;">
                <span class="span-text" aria-hidden="true"></span> Opslaan
            </div>
        </div>
        
    </div>





    @foreach (Dossier dossier in this.dossiers)
    {
        <p>@dossier.VerkoopTarief</p>
    }
</div>

@code {

    private List<Dossier> dossiers = new List<Dossier>();

    protected override void OnInitialized()
    {
        Dossier newDossier = createDossier();
        
    }

    private Dossier createDossier()
    {
        // Maak een nieuwe instantie van Dossier en geef de vereiste gegevens mee
        Dossier newDossier = new Dossier(
            id: "12345", // voorbeeldwaarde voor id
            kandidaatId: "ABCDE", // voorbeeldwaarde voor kandidaatId
            status: "In behandeling", // voorbeeldwaarde voor status
            date: DateTime.Now, // voorbeeldwaarde voor date (huidige datum/tijd)
            inkoopTarief: 1000.0, // voorbeeldwaarde voor inkoopTarief
            verkoopTarief: 1500.0, // voorbeeldwaarde voor verkoopTarief
            betalingstermijn: DateTime.Now.AddDays(30), // voorbeeldwaarde voor betalingstermijn (30 dagen na huidige datum/tijd)
            feepartij: "Voorbeeld Fee Partij", // voorbeeldwaarde voor feePartij
            functieOmschrijving: "Een mooie functieonmschrijving", // voorbeeldwaarde voor functieOmschrijving
            leverancierNotitie: "Voorbeeld leverancier notitie", // voorbeeldwaarde voor leverancierNotitie
            interneMedewerkerNotitie: "Voorbeeld interne medewerker notitie" // voorbeeldwaarde voor interneMedewerkerNotitie
        );

        dossiers.Add(newDossier);

        Dossier newDossier2 = new Dossier(
            id: "123456789", // voorbeeldwaarde voor id
            kandidaatId: "ABCDEFGHIJ", // voorbeeldwaarde voor kandidaatId
            status: "Afgerond", // voorbeeldwaarde voor status
            date: DateTime.Now, // voorbeeldwaarde voor date (huidige datum/tijd)
            inkoopTarief: 2000.0, // voorbeeldwaarde voor inkoopTarief
            verkoopTarief: 2500.0, // voorbeeldwaarde voor verkoopTarief
            betalingstermijn: DateTime.Now.AddDays(35), // voorbeeldwaarde voor betalingstermijn (30 dagen na huidige datum/tijd)
            feepartij: "Voorbeeld Fee Partij met een spin", // voorbeeldwaarde voor feePartij
            functieOmschrijving: "Nog een mooie functieonmschrijving", // voorbeeldwaarde voor functieOmschrijving
            leverancierNotitie: "Voorbeeld leverancier notitie", // voorbeeldwaarde voor leverancierNotitie
            interneMedewerkerNotitie: "Voorbeeld interne medewerker notitie" // voorbeeldwaarde voor interneMedewerkerNotitie
        );

        dossiers.Add(newDossier2);



        // Retourneer het nieuwe dossier
        return newDossier;
    }

}